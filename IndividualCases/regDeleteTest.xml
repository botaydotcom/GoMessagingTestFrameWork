<TestSuite>
	<TestSuiteName>Registration</TestSuiteName>
	<TargetHost>203.117.155.188</TargetHost>
	<TargetPort>9100</TargetPort>
	<VarMap>
		<Var name="email1">
			<Value>test_indotest0002@test.com</Value>
		</Var>		
		<Var name="name1">
			<Value>test_indotest0002</Value>
		</Var>
		<Var name="avatar">
			<Value>429933266161898</Value>
		</Var>
		<Var name="gender">
			<Value>0</Value>
		</Var>
		<Var name="password">
			<Value>e10adc3949ba59abbe56e057f20f883e</Value>
		</Var>
		<Var name="email2">
			<Value>test_indotest0001@test.com</Value>
		</Var>		
		<Var name="name2">
			<Value>test_indotest0001</Value>
		</Var>
	</VarMap>

	<ListTest>
		<TestInfo skip="false" repeat="1">
			<Name>Registration test</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="1">
			<Name>A adds B as buddy</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="1">
			<Name>A logs in and check buddy list, see B as his buddy</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="1">
			<Name>A deletes his account</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="1">
			<IgnoreMessages>
				<Message>
					<BaseCommand>0x00</BaseCommand>
					<Command>0x68</Command>
					<MessageType>Auth_Buddy_S2C_BuddyDeleted</MessageType>
				</Message>
			</IgnoreMessages>
			<Name>B checks and does not see A as buddy</Name>
		</TestInfo>
	</ListTest>

	<Tests>
		<Test>
			<MessageSequence>
				<Message type="Auth_C2S_RegAccount" fromClient="true">
					<Command>0x03</Command>
					<Data>
						<Auth_C2S_RegAccount>
							<EMail>{{.email1}}</EMail>
							<Password>{{.password}}</Password>
						</Auth_C2S_RegAccount>				
					</Data>
				</Message>

				<Message type="Auth_S2C_NeedFinishReg" fromClient="false">
					<Command>0x04</Command>
					<Data>
						<Auth_S2C_NeedFinishReg>
							<UserId>{{.userId1}}</UserId>
						</Auth_S2C_NeedFinishReg>	
					</Data>
				</Message>		
				
				<Message type="Auth_C2S_FillFinishReg" fromClient="true">		
					<Command>0x05</Command>
					<Data>
						<Auth_C2S_FillFinishReg>
							<UserId>{{.userId1}}</UserId>
							<NickName>{{.name1}}</NickName>
							<Gender>{{.gender}}</Gender>
							<AvatarId>{{.avatar}}</AvatarId>
						</Auth_C2S_FillFinishReg>
					</Data>
				</Message>

				<Message type="Auth_S2C_LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.userId1}}</UserId>
								<Name>{{.email1}}</Name>			
								<NickName>{{.name1}}</NickName>
								<Gender>{{.gender}}</Gender>
								<AvatarId>{{.avatar}}</AvatarId>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>

		<!--A and B log in, A adds B as buddy - B accepts (both online) -->
		<Test>
			<MessageSequence>
				<!--A log in-->
				<Message type="Auth_C2S_LoginInfo" fromClient="true">		
					<Command>0x02</Command>
					<Data>
						<Auth_C2S_LoginInfo>
							<Name>{{.email1}}</Name>
							<Password>{{.password}}</Password>
							<ClientType>1</ClientType>
							<MachineId>1</MachineId>
							<SoftwareVersion>1</SoftwareVersion>
						</Auth_C2S_LoginInfo>
					</Data>
				</Message>

				<!--Server sends A log in info-->
				<Message type="Auth_S2C_LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.userId1}}</UserId>
								<Name>{{.email1}}</Name>
								<NickName>{{.name1}}</NickName>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>

				<!--B log in-->
				<Message type="Auth_C2S_LoginInfo" fromClient="true" connection="1">		
					<Command>0x02</Command>
					<Data>
						<Auth_C2S_LoginInfo>
							<Name>{{.email2}}</Name>
							<Password>{{.password}}</Password>
							<ClientType>1</ClientType>
							<MachineId>1</MachineId>
							<SoftwareVersion>1</SoftwareVersion>
						</Auth_C2S_LoginInfo>
					</Data>
				</Message>

				<!--Server sends B log in info-->
				<Message type="Auth_S2C_LoginUserInfo" fromClient="false" connection="1">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.userId2}}</UserId>
								<Name>{{.email2}}</Name>		
								<NickName>{{.name2}}</NickName>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>

				<!--A send message to Server -->
				<Message type="Auth_Buddy_C2S_RequestAddBuddy" fromClient="true">
					<Command>0x65</Command>
					<Data>
						<Auth_Buddy_C2S_RequestAddBuddy>
							<UserId>{{.userId2}}</UserId>
							<Message>{{.msg}}</Message>
						</Auth_Buddy_C2S_RequestAddBuddy>
					</Data>
				</Message>

				<!--Server send message to B -->
				<Message type="Auth_Buddy_S2C_RemoteRequestAddBuddy" fromClient="false" connection="1">
					<Command>0x72</Command>
					<Data>
						<Auth_Buddy_S2C_RemoteRequestAddBuddy>
							<FromId>{{.userId1}}</FromId>
							<Message>{{.msg}}</Message>
						</Auth_Buddy_S2C_RemoteRequestAddBuddy>
					</Data>
				</Message>

				<!--B send accept message to Server -->
				<Message type="Auth_Buddy_C2S_AddBuddyResult" fromClient="true" connection="1">
					<Command>0x66</Command>
					<Data>
						<Auth_Buddy_C2S_AddBuddyResult>
							<UserId>{{.userId1}}</UserId>
							<Action>3</Action>
						</Auth_Buddy_C2S_AddBuddyResult>
					</Data>
				</Message>

				<!--Server send result message to B -->
				<Message type="Auth_Buddy_S2C_RemoteAddBuddyResult" fromClient="false" connection="1">
					<Command>0x67</Command>
					<Data>
						<Auth_Buddy_S2C_RemoteAddBuddyResult>
							<FromId>{{.userId1}}</FromId>
						</Auth_Buddy_S2C_RemoteAddBuddyResult>
					</Data>
				</Message>

				<!--Server send result message to A -->
				<Message type="Auth_Buddy_S2C_RemoteAddBuddyResult" fromClient="false">
					<Command>0x67</Command>
					<Data>
						<Auth_Buddy_S2C_RemoteAddBuddyResult>
							<FromId>{{.userId2}}</FromId>
						</Auth_Buddy_S2C_RemoteAddBuddyResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>

		<!--A logs in and check buddy list, see B as his buddy-->
		<Test>
			<MessageSequence>
				<!--A log in-->
				<Message type="Auth_C2S_LoginInfo" fromClient="true">		
					<Command>0x02</Command>
					<Data>
						<Auth_C2S_LoginInfo>
							<Name>{{.email1}}</Name>
							<Password>{{.password}}</Password>
							<ClientType>1</ClientType>
							<MachineId>1</MachineId>
							<SoftwareVersion>1</SoftwareVersion>
						</Auth_C2S_LoginInfo>
					</Data>
				</Message>

				<!--Server sends A log in info-->
				<Message type="Auth_S2C_LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.userId1}}</UserId>
								<Name>{{.email1}}</Name>
								<NickName>{{.name1}}</NickName>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>

				<!--A requests buddy list from Server -->
				<Message type="Auth_Buddy_C2S_RequestBuddySimpleInfoList" fromClient="true">
					<Command>0x64</Command>
					<Data>
						<Auth_Buddy_C2S_RequestBuddySimpleInfoList>
							<RequestId>1</RequestId>
						</Auth_Buddy_C2S_RequestBuddySimpleInfoList>
					</Data>
				</Message>

				<!--Server send message to A -->
				<Message type="Auth_Buddy_S2C_BuddySimpleInfoList" fromClient="false">
					<Command>0x65</Command>
					<Data>
						<Auth_Buddy_S2C_BuddySimpleInfoList>
							<Buddies>
								<UserId>{{.userId2}}</UserId>
							</Buddies>
						</Auth_Buddy_S2C_BuddySimpleInfoList>
					</Data>
				</Message>
			</MessageSequence>
		</Test>
		
		<!--A deletes his account-->
		<Test>
			<MessageSequence>
				<Message type="Auth_C2S_DeleteAccount" fromClient="true">		
					<Command>0x0c</Command>
					<Data>
						<Auth_C2S_DeleteAccount>
							<Userid>{{.userId1}}</Userid>
						</Auth_C2S_DeleteAccount>
					</Data>
				</Message>
			</MessageSequence>
		</Test>

		<!--B logs in and check buddy list, doesnt A as his buddy-->
		<Test>
			<MessageSequence>
				<!--A log in-->
				<Message type="Auth_C2S_LoginInfo" fromClient="true">		
					<Command>0x02</Command>
					<Data>
						<Auth_C2S_LoginInfo>
							<Name>{{.email2}}</Name>
							<Password>{{.password}}</Password>
							<ClientType>1</ClientType>
							<MachineId>1</MachineId>
							<SoftwareVersion>1</SoftwareVersion>
						</Auth_C2S_LoginInfo>
					</Data>
				</Message>

				<!--Server sends B log in info-->
				<Message type="Auth_S2C_LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.userId2}}</UserId>
								<Name>{{.email2}}</Name>
								<NickName>{{.name2}}</NickName>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>

				<!--B requests buddy list from Server -->
				<Message type="Auth_Buddy_C2S_RequestBuddySimpleInfoList" fromClient="true" wait="1s">
					<Command>0x64</Command>
					<Data>
						<Auth_Buddy_C2S_RequestBuddySimpleInfoList>
							<RequestId>1</RequestId>
						</Auth_Buddy_C2S_RequestBuddySimpleInfoList>
					</Data>
				</Message>							

				<!--Server send message to B -->
				<Message type="Auth_Buddy_S2C_BuddySimpleInfoList" fromClient="false">
					<Command>0x65</Command>
					<Data>
						<Auth_Buddy_S2C_BuddySimpleInfoList>
						</Auth_Buddy_S2C_BuddySimpleInfoList>
					</Data>
				</Message>
			</MessageSequence>
		</Test>
	</Tests>
</TestSuite>