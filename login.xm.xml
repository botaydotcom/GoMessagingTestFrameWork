<TestSuite>
	<TestSuiteName>Registration</TestSuiteName>
	<TargetHost>203.117.155.188</TargetHost>
	<TargetPort>9100</TargetPort>
	<VarMap>
		<Var name="email">
			<Value>indotest17@test.com</Value>
		</Var>		
		<Var name="name">
			<Value>indotest17</Value>
		</Var>			
		<Var name="avatar">
			<Value>429933266161898</Value>
		</Var>
		<Var name="gender">
			<Value>0</Value>
		</Var>
	</VarMap>

	<ListTest>
		<TestInfo skip="false" repeat="1">
			<Name>Hello test</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="1">
			<Name>Registration test</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="1">
			<Name>Login test</Name>
		</TestInfo>
	</ListTest>

	<Tests>
		<Test>
			<MessageSequence>
				<Message type="HelloInfo" fromClient="true">
					<Command>0x01</Command>
					<Data>
						<HelloInfo>
							<ClientType>1</ClientType>
							<Version>2</Version>
						</HelloInfo>
					</Data>
				</Message>
				<Message type="HelloInfoResult" fromClient="false">
					<Command>0x01</Command>
					<Data>
						<HelloInfoResult>
							<Token>hello</Token>
						</HelloInfoResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>

		<Test>
			<MessageSequence>
				<Message type="RegAccount" fromClient="true">
					<Command>0x03</Command>
					<Data>
						<RegAccount>
							<EMail>{{.email}}</EMail>
							<Password>e10adc3949ba59abbe56e057f20f883e</Password>
						</RegAccount>				
					</Data>
				</Message>

				<Message type="NeedFinishReg" fromClient="false">
					<Command>0x04</Command>
					<Data>
						<NeedFinishReg>
							<UserId>{{.var1}}</UserId>
						</NeedFinishReg>				
					</Data>
				</Message>		
				
				<Message type="FillFinishReg" fromClient="true">		
					<Command>0x05</Command>
					<Data>
						<FillFinishReg>
							<UserId>{{.var1}}</UserId>
							<NickName>{{.name}}</NickName>
							<Gender>{{.gender}}</Gender>
							<AvatarId>{{.avatar}}</AvatarId>
						</FillFinishReg>
					</Data>
				</Message>

				<Message type="LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<LoginInfoResult>
							<MyInfo>
								<UserId>{{.var1}}</UserId>
								<Name>{{.email}}</Name>						
								<NickName>{{.name}}</NickName>
								<Gender>{{.gender}}</Gender>
								<AvatarId>{{.avatar}}</AvatarId>
							</MyInfo>
						</LoginInfoResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>
	</Tests>
</TestSuite>