	<ListTest>
		<TestInfo skip="false" repeat="1">
			<Name>Hello test</Name>
		</TestInfo>
		<TestInfo skip="true" repeat="1">
			<Name>Registration test</Name>
		</TestInfo>
		<TestInfo skip="false" repeat="20">
