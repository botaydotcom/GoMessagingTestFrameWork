	<Tests>
		<Test>
			<MessageSequence>
				<Message type="Auth_C2S_HelloInfo" fromClient="true">
					<Command>0x01</Command>
					<Data>
						<Auth_C2S_HelloInfo>
							<ClientType>1</ClientType>
							<Version>2</Version>
						</Auth_C2S_HelloInfo>
					</Data>
				</Message>
				<Message type="Auth_S2C_HelloInfoResult" fromClient="false">
					<Command>0x01</Command>
					<Data>
						<Auth_S2C_HelloInfoResult>
							<Token>hello</Token>
						</Auth_S2C_HelloInfoResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>

		<Test>
			<MessageSequence>
				<Message type="Auth_C2S_RegAccount" fromClient="true">
					<Command>0x03</Command>
					<Data>
						<Auth_C2S_RegAccount>
							<EMail>{{.email}}</EMail>
							<Password>{{.password}}</Password>
						</Auth_C2S_RegAccount>				
					</Data>
				</Message>

				<Message type="Auth_S2C_NeedFinishReg" fromClient="false">
					<Command>0x04</Command>
					<Data>
						<Auth_S2C_NeedFinishReg>
							<UserId>{{.var1}}</UserId>
						</Auth_S2C_NeedFinishReg>				
					</Data>
				</Message>		
				
				<Message type="Auth_C2S_FillFinishReg" fromClient="true">		
					<Command>0x05</Command>
					<Data>
						<Auth_C2S_FillFinishReg>
							<UserId>{{.var1}}</UserId>
							<NickName>{{.name}}</NickName>
							<Gender>{{.gender}}</Gender>
							<AvatarId>{{.avatar}}</AvatarId>
						</Auth_C2S_FillFinishReg>
					</Data>
				</Message>

				<Message type="Auth_S2C_LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.var1}}</UserId>
								<Name>{{.email}}</Name>						
								<NickName>{{.name}}</NickName>
								<Gender>{{.gender}}</Gender>
								<AvatarId>{{.avatar}}</AvatarId>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>

		<Test>
			<MessageSequence>
				<Message type="Auth_C2S_HelloInfo" fromClient="true">
					<Command>0x01</Command>
					<Data>
						<Auth_C2S_HelloInfo>
							<ClientType>1</ClientType>
							<Version>2</Version>
						</Auth_C2S_HelloInfo>
					</Data>
				</Message>
				<Message type="Auth_S2C_HelloInfoResult" fromClient="false">
					<Command>0x01</Command>
					<Data>
						<Auth_S2C_HelloInfoResult>
							<Token>hello</Token>
						</Auth_S2C_HelloInfoResult>
					</Data>
				</Message>
				<Message type="Auth_C2S_LoginInfo" fromClient="true">		
					<Command>0x02</Command>
					<Data>
						<Auth_C2S_LoginInfo>
							<Name>{{.email}}</Name>						
							<Password>{{.password}}</Password>
							<ClientType>1</ClientType>
							<MachineId>1</MachineId>
							<SoftwareVersion>1</SoftwareVersion>
						</Auth_C2S_LoginInfo>
					</Data>
				</Message>

				<Message type="Auth_S2C_LoginUserInfo" fromClient="false">
					<Command>0x02</Command>
					<Data>
						<Auth_S2C_LoginInfoResult>
							<MyInfo>
								<UserId>{{.var1}}</UserId>
								<Name>{{.email}}</Name>						
								<NickName>{{.name}}</NickName>
								<Gender>{{.gender}}</Gender>
								<AvatarId>{{.avatar}}</AvatarId>
							</MyInfo>
						</Auth_S2C_LoginInfoResult>
					</Data>
				</Message>
			</MessageSequence>
		</Test>
	</Tests>
</TestSuite>